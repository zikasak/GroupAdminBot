pipeline {
    agent {
        docker {
        image 'maven:3.8.4-adoptopenjdk-17'
        }
    }
    stages {
        stage('Test') {
            steps {
                withEnv([params.botNameEnv, params.botTokenEnv.toString()]){
                   withMaven {
                      sh 'mvn test'
                   }
                }
            }
        }
        stage("Build") {
            steps {
                withMaven {
                    sh 'mvn -DskipTests -B clean package'
                }
            }
        }

    }
}