pipeline {
    agent {
        docker {
        image 'maven:3.8.1-adoptopenjdk-16'
        }
    }
    stages {
        stage('Test') {
            steps {
                withEnv([params.botNameEnv, params.botTokenEnv.toString()]){
                   withMaven {
                      sh 'mvn test'
                   }
                }
            }
        }
        stage("Build") {
            steps {
                withMaven {
                    sh 'mvn -DskipTests -B clean package'
                }
            }
        }

    }
    post{	//No matter success or failure will send information, youid is the group id sent
            always{
                telegramSend(message:'${PROJECT_NAME}:${BUILD_STATUS}',chatId:params.NotificationChat.toString().toLong())
             }

       }
}